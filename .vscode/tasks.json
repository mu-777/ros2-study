{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ROS Build",
      "detail": "Build workspace (default)",
      "type": "shell",
      "command": "rosdep update; rosdep install -i --from-path src --rosdistro $ROS_DISTRO -y; colcon build --symlink-install",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "problemMatcher": []
    },
  ]
}